{
  "name": "@eljs/release",
  "version": "0.7.2",
  "description": "release npm package easily",
  "main": "dist/release.cjs.js",
  "module": "dist/release.esm.js",
  "types": "dist/release.d.ts",
  "bin": {
    "release": "bin/release.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "lint": "eslint 'src/**/*.@(js|ts)' --fix",
    "format": "prettier --write 'src/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --forceExit --colors",
    "coverage": "jest --coverage",
    "prerelease": "npm run lint && npm run build",
    "release": "node ./bin/release.js",
    "release:quick": "node ./bin/release.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/release"
  },
  "keywords": [
    "release",
    "script",
    "conventional-changelog"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{bin,src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@types/conventional-changelog": "^3.1.1",
    "@eljs/changelog-preset": "0.0.1",
    "chalk": "^4.1.2",
    "commander": "^7.2.0",
    "conventional-changelog": "^3.1.25",
    "inquirer": "^7.2.0",
    "js-yaml": "^4.1.0",
    "new-github-release-url": "^1.0.0",
    "open": "^7.3.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@microsoft/api-extractor": "^7.19.4",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^14.0.13",
    "@types/semver": "^7.3.9",
    "@types/signale": "^1.4.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "codecov": "^3.8.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "minimist": "^1.2.5",
    "prettier": "^2.5.1",
    "rollup": "^2.69.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.3.1",
    "typescript": "4.5.5"
  },
  "author": "ender lee",
  "publishConfig": {
    "registry": "https://registry.npmjs.org "
  },
  "license": "MIT"
}
